<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.hanks.htextview.fall.FallTextView
            android:id="@+id/tv_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:maxWidth="300dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="Flexogram"
            android:textColor="#000000"
            android:textSize="30sp" />

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/et_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="email"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/deep" />

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/et_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/deep" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_signin"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:text="Войти"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_theme="@array/dark"
            flatui:fl_touchEffect="fl_ripple" />

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textColor="#000000"
            android:textSize="17sp" />

    </LinearLayout>
</FrameLayout>
